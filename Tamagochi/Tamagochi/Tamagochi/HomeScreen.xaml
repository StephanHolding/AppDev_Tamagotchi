<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagochi.HomeScreen">
    <StackLayout Orientation="Vertical" >

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Button Text="hunger" CornerRadius="25" Clicked="GoToHungerPage"/>
            <Button Text="thirst" CornerRadius="25" Clicked="GoToThirstPage"/>
            <Button Text="attention" CornerRadius="25" Clicked="GoToAttentionPage"/>
        </StackLayout>

        <StackLayout Orientation="Vertical" Padding="50" HeightRequest="200" VerticalOptions="Center" Spacing="50">
            <Label x:Name="HintText" Text="Press the text bubble to continue" HorizontalOptions="Center"/>
            <Button x:Name="DialogueText" BackgroundColor="White" TextColor="Black" CornerRadius="25" Clicked="DialogueBoxClicked"/>
            <Image Source="pogO.png"/>
        </StackLayout>

        <!--<Entry x:Name="textEntry" Placeholder="Enter text here..." HorizontalTextAlignment="Center"/>
        <Button Text="Submit" BorderWidth="5" Clicked="Button_Clicked"/>-->
    </StackLayout>

</ContentPage>